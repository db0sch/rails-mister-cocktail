
<div class="wrapper">
  <div class="container text-center">
  
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-6">
        <h2><%= @cocktail.name %></h2>
        <h4>Recettes:</h4>
        <div class="doses"> 
        <!-- il faut essayer de faire un truc avec le flexbox -->
          <% @cocktail.doses.each do |dose| %>
            <div>
            <p> <%= dose.ingredient.name %> | <%= dose.description %> <%= link_to "x", cocktail_dose_path(@cocktail, dose), method: :delete %></p>
            </div>
          <% end %>
        <%= link_to 'add a dose', new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
        </div>      
      </div>
    </div>
  
    <div class="row">
      <div class="col-xs-12">
        <%= link_to 'back', cocktails_path, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
